<p id="notice"><%= notice %></p>

<p>
  <strong>Match Name:</strong>
  <%= @match.name %>
</p>


<p>
  <strong>Playing as:</strong>
<%= @playing_as.name %>
</p>


<p>
  <strong>Playing as Stats:</strong>
<%= @playing_as.as_json %>
</p>


<p>
  <strong>Playing as Grabs:</strong>
<%= @playing_as.grabs.as_json %>
</p>


<p>
  <strong>Playing as Ground Moves:</strong>
<%= @playing_as.ground_moves.as_json %>
</p>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th>Match</th>
      <th>Section</th>
      <!-- <th>Order</th>
      <th>Video url</th>
      <th>Img url</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @match.playing_as_notes.each do |note| %>
      <tr>
        <td><%= note.name %></td>
        <td><%= note.match_id %></td>
          <td><%= note.section %></td>
        <!-- <td><%= note.order %></td>
        <td><%= note.video_url %></td>
        <td><%= note.img_url %></td> -->
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_for @new_note do |f| %>
  <%= render partial: "note_form", locals: {f: f, section: "playing_as"} %>
<% end %>

